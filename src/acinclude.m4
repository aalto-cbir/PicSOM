dnl AM_PATH_MYOCTAVE([MINIMUM-VERSION, [ACTION-IF-FOUND [, ACTION-IF-NOT-FOUND]]])
dnl Test for octave-config, and define OCTAVE_CFLAGS and OCTAVE_LIBS
AC_DEFUN([AM_PATH_MYOCTAVE],[
  AC_PATH_PROG(OCTAVE_CONFIG, octave-config, no)
  if test "$OCTAVE_CONFIG" == "no"; then
    ifelse([$3], , :, [$3]) 
  else
    save_LDFLAGS="$LDFLAGS"
    save_CFLAGS="$CFLAGS"
    save_CXXFLAGS="$CXXFLAGS"
    save_CPPFLAGS="$CPPFLAGS"
    OCTLIBDIR=`$OCTAVE_CONFIG -p OCTLIBDIR`
    OCTINCLUDEDIR=`$OCTAVE_CONFIG -p OCTINCLUDEDIR`
    OCLIBDIR=`$OCTAVE_CONFIG -p LIBDIR`
    OCINCLUDEDIR=`$OCTAVE_CONFIG -p INCLUDEDIR`
    OCTAVE_LIBS="-L$OCTLIBDIR -L$OCLIBDIR -Wl,-rpath,$OCTLIBDIR -rdynamic"
    OCTAVE_CFLAGS="-I$OCTINCLUDEDIR -I$OCINCLUDEDIR"
    LDFLAGS="$LDFLAGS $OCTAVE_LIBS" 
    CFLAGS="$CFLAGS $OCTAVE_CFLAGS"
    CXXFLAGS="$CXXFLAGS $OCTAVE_CFLAGS"
    CPPFLAGS="$CPPFLAGS $OCTAVE_CFLAGS"
    haveoctave=true
    AC_HAVE_LIBRARY(octave,,[haveoctave=false])
    AC_HAVE_LIBRARY(cruft,,[haveoctave=false])
    AC_HAVE_LIBRARY(octinterp,,[haveoctave=false])
    AC_CHECK_HEADERS([octave/oct.h],,[haveoctave=false])

    if test "$haveoctave" = "false"; then
      LDFLAGS="$save_LDFLAGS"
      CFLAGS="$save_CFLAGS"
      CXXFLAGS="$save_CXXFLAGS"
      CPPFLAGS="$save_CPPFLAGS"
      ifelse([$3], , :, [$3]) 
    else
      AC_SUBST(OCTAVE_CFLAGS,"$OCTAVE_CFLAGS")
      AC_SUBST(OCTAVE_LIBS,"$OCTAVE_LIBS")
      ifelse([$2], , :, [$2])     
    fi
  fi
])

